<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CoverHeadline" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CoverSubject" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ArticleItemHeadline" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="ArticleItemSubject" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Headline" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SubHeadline" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="Author" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Caption" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>